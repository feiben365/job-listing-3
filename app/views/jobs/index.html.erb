<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-default") %>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>职缺</td>
      <td>薪资下限</td>
      <td>薪资上限</td>
      <td>刊登时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>

      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td>
        <%= link_to("wage_lower_bound") %>
      </td>
      <td>
        <%= link_to("wage_upper_bound") %>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
